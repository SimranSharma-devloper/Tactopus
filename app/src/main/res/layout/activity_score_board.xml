<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreBoard"
    android:orientation="vertical">
    <TextView
        android:id="@+id/playTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing time: 0"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/AveragePlayingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average playing time:0"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/playTime"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:1/x"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_below="@id/AveragePlayingTime"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accuracy"
        android:textSize="18sp"
        android:text="Accuracy"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/score"/>

    <Button
        android:id="@+id/resultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accuracy"
        android:layout_alignParentRight="true"
        android:onClick="resultMethod"
        android:layout_marginRight="25sp"
        android:text="next" />
    <Button
        android:id="@+id/reattemptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reattempt"
       android:layout_marginLeft="25sp"
        android:layout_alignParentLeft="true"
        android:onClick="reattemptMethod"
        android:layout_below="@id/accuracy"/>



</RelativeLayout>